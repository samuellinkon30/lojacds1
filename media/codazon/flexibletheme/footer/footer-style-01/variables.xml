<config>
   <identifier>footer-style-01</identifier>
   <title>Footer Style 01</title>
   <variables>
      <footer_background>#ffffff</footer_background>
      <footer_background_file/>
      <footer_background_image_option>0 0 no-repeat fixed</footer_background_image_option>
      <footer_background_normal/>
      <footer_border>#e1e1e1</footer_border>
      <footer_bottom_background/>
      <footer_font>13px</footer_font>
      <footer_hover_text>#6772e5</footer_hover_text>
      <footer_text>#414b56</footer_text>
      <footer_text_normal/>
      <footer_title_font>22px</footer_title_font>
      <footer_title_text>#414b56</footer_title_text>
      <footer_top_background>#F6F7F9</footer_top_background>
   </variables>
   <layout_xml>&lt;reference name=&quot;footer&quot;&gt;
&lt;block name=&quot;theme-layout-footer&quot; type=&quot;flexibletheme/footer&quot; /&gt;
&lt;remove name=&quot;store_switcher&quot; /&gt;
&lt;remove name=&quot;footer_links&quot; /&gt;
&lt;remove name=&quot;footer_links2&quot; /&gt;
&lt;remove name=&quot;footer.newsletter&quot; /&gt;
&lt;remove name=&quot;cms_footer_links&quot; /&gt;
&lt;remove name=&quot;cms_footer_links_sm&quot; /&gt;
&lt;remove name=&quot;footer_currency&quot; /&gt;
&lt;/reference&gt;</layout_xml>
   <custom_variables/>
   <custom_fields/>
   <parent/>
   <content>&lt;div class=&quot;footer-style-01 text-center&quot;&gt;
&lt;div class=&quot;footer content&quot;&gt;
&lt;div class=&quot;footer-content-top&quot;&gt;
&lt;div class=&quot;row&quot;&gt;
&lt;div class=&quot;col-xs-24 col-sm-12 col-sm-push-6&quot;&gt;
&lt;div class=&quot;newsletter&quot;&gt;
&lt;p class=&quot;newsletter-title&quot;&gt;SUBSCRIBE US&lt;/p&gt;
&lt;div class=&quot;newsletter-content&quot;&gt;{{block type=&quot;newsletter/subscribe&quot; name=&quot;cdz.newsletter&quot; template=&quot;newsletter/subscribe.phtml&quot;}}&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
&lt;div class=&quot;footer-content-middle&quot;&gt;
&lt;div class=&quot;footer-social hover-iconsocial&quot;&gt;
&lt;p class=&quot;social&quot;&gt;&lt;a class=&quot;spin circle&quot; href=&quot;#&quot;&gt;&lt;span class=&quot;fa fa-facebook&quot;&gt;&lt;span&gt;facebook&lt;/span&gt;&lt;/span&gt;&lt;/a&gt; &lt;a href=&quot;#&quot;&gt;&lt;span class=&quot;fa fa-twitter&quot;&gt;&lt;span&gt;twitter&lt;/span&gt;&lt;/span&gt;&lt;/a&gt; &lt;a href=&quot;#&quot;&gt;&lt;span class=&quot;fa fa-pinterest-p&quot;&gt;&lt;span&gt;pinterest&lt;/span&gt;&lt;/span&gt;&lt;/a&gt; &lt;a href=&quot;#&quot;&gt;&lt;span class=&quot;fa fa-google-plus&quot;&gt;&lt;span&gt;google plus&lt;/span&gt;&lt;/span&gt;&lt;/a&gt;&lt;a href=&quot;#&quot;&gt;&lt;span class=&quot;fa fa-rss&quot;&gt;&lt;span&gt;rss&lt;/span&gt;&lt;/span&gt;&lt;/a&gt;&lt;/p&gt;
&lt;/div&gt;
&lt;div class=&quot;footer-payment&quot;&gt;&lt;img alt=&quot;Accept Payment&quot; class=&quot;img-responsive&quot; src=&quot;{{media url=&quot;wysiwyg/codazon/footer-payment.png&quot;}}&quot; /&gt;&lt;/div&gt;
&lt;/div&gt;
&lt;div class=&quot;footer-content-bottom&quot;&gt;
&lt;div class=&quot;footer-address&quot;&gt;
&lt;p&gt;&amp;copy; 2018 Codazon Ltd. Trademarks and brands&lt;/p&gt;
&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;
&lt;/div&gt;</content>
</config>
