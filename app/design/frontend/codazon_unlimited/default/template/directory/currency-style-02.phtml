/**
 * Currency switcher
 *
 * @see Mage_Directory_Block_Currency
 */
?>
<?php if($this->getCurrencyCount()>1): ?>
<?php $currencies = $this->getCurrencies(); ?>
<?php $currentCurrencyCode = $this->getCurrentCurrencyCode(); ?>
<?php $id = uniqid(); ?>
<div class="switcher currency switcher-currency" id="switcher-currency-<?php echo $id?>">
    <div class="actions dropdown options switcher-options">
        <a href="javascript:void(0)" id="select-currency-trigger-<?php echo $id?>" class="action toggle switcher-trigger">
            <span class="language-<?php echo $this->escapeHtml($this->getCurrentCurrencyCode()) ?>">
                <span><?php echo $this->escapeHtml($currentCurrencyCode) ?> - <?php echo @$this->escapeHtml($currencies[$currentCurrencyCode]) ?></span>
            </span>
        </a>
        <ul id="select-currency-<?php echo $id?>" class="mdl-menu mdl-menu--bottom-left mdl-js-menu mdl-js-ripple-effect dropdown" title="<?php echo Mage::helper('core')->quoteEscape($this->__('Your Currency')) ?>" for="select-currency-trigger-<?php echo $id?>">
            <?php foreach ($currencies as $_code => $_name): ?>
            <?php if ($_code == $this->getCurrentCurrencyCode()) continue; ?>            
            <li class="switcher-option <?php echo $_code ?>">
                <a href="<?php echo $this->getSwitchCurrencyUrl($_code) ?>"><?php echo $_name ?> - <?php echo $_code ?></a>
            </li>
            <?php endforeach; ?>
        </ul>
    </div>
</div>
<?php endif; ?>
